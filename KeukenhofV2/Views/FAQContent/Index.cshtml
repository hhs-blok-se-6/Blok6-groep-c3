@model IEnumerable<KeukenhofV2.Models.FAQ>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Bewerk FAQ</h2>

<p>
    <a asp-controller="Home" asp-action="Edit">Keer terug naar Homepagina</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.vraag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.antwoord)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.vraag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.antwoord)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FAQId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FAQId">Details</a> |

            </td>
        </tr>
}
    </tbody>
</table>
