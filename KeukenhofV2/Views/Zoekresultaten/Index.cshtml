@model IEnumerable<KeukenhofV2.Models.ZoekResultaten>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Gezocht op: @ViewData["SearchVal"] </h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            @if (item.Type == "h1" || item.Type == "h2" ||
                item.Type == "h3" || item.Type == "h4" ||
                item.Type == "h5" || item.Type == "p" ||
                item.Type == "label")
            {
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Sid">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Sid">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Sid">Delete</a>
                </td>}
            

        </tr>
}
    </tbody>
</table>
