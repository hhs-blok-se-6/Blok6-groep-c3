@model KeukenhofV2.Models.CardContent
<div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
    <div class="news">
        <small>@Model.Tag</small>
        <img src="@Model.Image" alt="card image">
        <div class="text">
            <label>@Model.Date</label>
            <h5>@Model.Title</h5>
            <p>@Model.Text</p>
            <button class="button @Model.Theme" >@Model.Button1</button>
        </div>
    </div>
</div>
