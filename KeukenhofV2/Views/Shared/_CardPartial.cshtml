@model KeukenhofV2.Models.CardContent
@{ 
    string link;
    try
    {
        link = Model.Link;
    } catch
    {
        link = "#";
    }
}
<div class="col-xs-12 col-md-3 col-lg-3">
    <div class="news">
        <small>@Model.Tag</small>
        <img src="@Model.Image" alt="card image">
        <div class="text">
            <label>@Model.Date</label>
            <h5>@Model.Title</h5>
            <p>@Model.Text</p>
            <form action="@link">
                <input class="button @Model.Theme" type="submit" value="@Model.Button1" />
            </form>
        </div>
    </div>
</div>