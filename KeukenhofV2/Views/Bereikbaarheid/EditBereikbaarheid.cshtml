@model List<BereikbaarheidContent>
@{
    ViewData["Title"] = "Bereikbaarheid";
}

<!DOCTYPE html>
<html lang="nl-nl">
<head>
    <link rel="stylesheet" type="text/css" href="~/css/StyleSheet.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#1").click(function () {
                $('html, body').animate({
                    scrollTop: $("#div1").offset().top
                }, 2000);
            });
        });

        $(document).ready(function () {
            $("#2").click(function () {
                $('html, body').animate({
                    scrollTop: $("#div2").offset().top
                }, 2000);
            });
        });

        $(document).ready(function () {
            $(".accordion h5").click(function () {
                var id = this.id;
                $(".accordion-content").each(function () {
                    if ($("#" + id).next()[0].id != this.id) {
                        $(this).slideUp("slow");
                    }
                });

                $(this).next().toggle("slow");
            });
        });
    </script>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-md-12 col-lg-12">
                <img class="hoofdfoto" src="~/images/P06Bereikbaarheid/bloemen.png" alt="Hoofdfoto" />
            </div>
        </div>
        <div class="row">
            <div class="col-xs-1 col-md-1 col-lg-1"></div>
            <div class="col-xs-12 col-md-5 col-lg-5">
                <a asp-controller="BereikbaarheidContent" asp-action="Edit" asp-route-id="@Model[0].Id"><h1 class="toegankelijkheidoftitel" align="left" style="margin-left: -15%">@Model[0].Content</h1></a>
</div>
        </div>
        <div class="row">
            <div class="col-xs-1 col-md-1 col-lg-1"></div>
            <div class="col-xs-12 col-md-5 col-lg-5">
                <a asp-controller="BereikbaarheidContent" asp-action="Edit" asp-route-id="@Model[1].Id"><p class="evenementtextklein" align="left">@Model[1].Content</p></a>
</div>
            <div class="col-xs-12 col-md-5 col-lg-5">
                <a asp-controller="BereikbaarheidContent" asp-action="Edit" asp-route-id="@Model[2].Id"><p class="evenementtextklein" align="left">@Model[2].Content</p></a>
</div>
        </div>
        <div class="row" style="margin-top: 20px">
            <div class="col-xs-1 col-md-1 col-lg-1"></div>
            <div class="col-xs-12 col-md-2 col-lg-2">
                <button class="videobutton">Reisplanner</button>
            </div>
        </div>
        <div class="row" style="margin-top: 20px">
            <div style="background: #36454E; height: 64px" class="col-xs-12 col-md-12 col-lg-12">
                <a asp-controller="BereikbaarheidContent" asp-action="Edit" asp-route-id="@Model[3].Id"> <div style="top: 22px; cursor:pointer" class="col-xs-12 col-md-2 col-lg-2"><a id="1" class="labeltext">@Model[3].Content</a></div></a>
               <a asp-controller="BereikbaarheidContent" asp-action="Edit" asp-route-id="@Model[4].Id"> <div style="margin-left: -3%; top: 22px; cursor:pointer" class="col-xs-12 col-md-2 col-lg-2"><a id="2" class="labeltext">@Model[4].Content</a></div></a>
               <a asp-controller="BereikbaarheidContent" asp-action="Edit" asp-route-id="@Model[5].Id"> <div style="margin-left: -5%; top: 22px; cursor:pointer" class="col-xs-12 col-md-2 col-lg-2"><a id="3" class="labeltext">@Model[5].Content</a></div></a>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-1 col-md-1 col-lg-1"></div>
            <div class="col-xs-12 col-md-10 col-lg-10">
                <a asp-controller="BereikbaarheidContent" asp-action="Edit" asp-route-id="@Model[6].Id"><h2 class="kleinetitel">@Model[6].Content</h2></a>
                <a asp-controller="BereikbaarheidContent" asp-action="Edit" asp-route-id="@Model[7].Id"><p class="evenementtextklein" style="margin-top: 20px">@Model[7].Content</p></a>
</div>
        </div>
    </div>
    <div class="container" style="background-color: #E1EBE9; height: 525px">
        <div class="row">
            <div class="col-xs-12 col-md-12 col-lg-12" style="margin-top: 20px">
                <img style="width: 100%" src="~/images/P06Bereikbaarheid/ctaImage1.png" alt="Openbaar vervoer" />
                <div class="openbaarvervoerdownload">
                    <a href="~/images/P06Bereikbaarheid/openbaarvervoer.png" download>
                        <a asp-controller="BereikbaarheidContent" asp-action="Edit" asp-route-id="@Model[8].Id"><h5>@Model[8].Content</h5></a>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="container" style="background-color: #FBDFD3">
        <div class="row">
            <div class="col-xs-12 col-md-12 col-lg-12" style="margin-top: 20px">
                <img style="width: 100%" src="~/images/P06Bereikbaarheid/ctaImage2.png" alt="Keukenhof" />
                <a asp-controller="BereikbaarheidContent" asp-action="Edit" asp-route-id="@Model[9].Id"><h5 class="kleinefototext">@Model[9].Content</h5></a>
</div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-xs-1 col-md-1 col-lg-1"></div>
            <div class="col-xs-12 col-md-10 col-lg-10">
              <a asp-controller="BereikbaarheidContent" asp-action="Edit" asp-route-id="@Model[10].Id"><h2 class="kleinetitel">@Model[10].Content</h2></a>
              <a asp-controller="BereikbaarheidContent" asp-action="Edit" asp-route-id="@Model[11].Id"><p class="evenementtextklein">@Model[11].Content</p></a>
</div>
        </div>
    </div>
</body>
</html>
